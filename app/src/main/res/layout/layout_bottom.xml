                android:layout_below="@id/iv_tab2"
                android:layout_centerHorizontal="true"
                android:text="首页"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_tab3"
